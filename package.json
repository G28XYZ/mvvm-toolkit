{
  "version": "1.0.3",
  "name": "mvvm-toolkit",
  "author": {
    "name": "Aleksandr Kucherenko",
    "email": "g28xyz@ya.ru"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/G28XYZ/mvvm-toolkit"
  },
  "description": "Tools to help build apps based on the MVVM pattern using React and mobx.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.cjs"
    },
    "./hooks/virtual-scroll": {
      "import": "./dist/hooks/virtual-scroll.js",
      "require": "./dist/hooks/virtual-scroll.cjs"
    },
    "./vite-plugins": {
      "import": "./dist/vite-plugins/index.js",
      "require": "./dist/vite-plugins/index.cjs"
    },
    "./vite-plugins/mvvm-di": {
      "import": "./dist/vite-plugins/mvvm-di.js",
      "require": "./dist/vite-plugins/mvvm-di.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "private": false,
  "scripts": {
    "start": "npm run watch",
    "build": "npx vite build",
    "build:clear": "npx vite build && rm -rf ./node_modules",
    "watch": "npx vite build --watch --mode develop",
    "test": "vitest --config vitest.config.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "tsc": "tsc --noEmit -- --watch",
    "examples:build": "cd ./examples/todo-list && npm i && npm run build"
  },
  "keywords": [
    "react",
    "mobx",
    "mvvm"
  ],
  "peerDependencies": {
    "immer": "^11.1.0",
    "lodash": "^4.17.21",
    "mobx": "^6.15.0",
    "mobx-react": "^9.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.2.2",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/lodash": "^4.17.21",
    "@types/node": "^25.0.3",
    "@types/react-dom": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.19",
    "jsdom": "^24.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.7.0",
    "vite": "^7.3.0",
    "vite-plugin-checker": "^0.9.1",
    "vite-plugin-inspect": "^11.3.3",
    "vitest": "^2.1.9"
  },
  "license": "MIT"
}
